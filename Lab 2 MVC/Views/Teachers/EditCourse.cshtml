@model Lab_2_MVC.Models.Entities.Teachers

<h1>Edit Course</h1>

<form method="post">
    <div class="mt-3">
        <label asp-for="Courses.Name" class="form-label">Course</label>
        <select asp-items="@ViewBag.Courses" class="form-select" asp-for="Id">
            <option disabled selected>Select Course</option>
        </select>
    </div>
    <div class="mt-3">
        <label class="form-label">New Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>