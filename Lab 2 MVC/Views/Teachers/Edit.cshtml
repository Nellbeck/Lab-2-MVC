@{
}
@model Lab_2_MVC.Models.Entities.Teachers

<h1>Edit Teacher</h1>

@if (Model is null)
{
    <p>No Employee was found with this Id</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="mt-3">
            <label class="form-label">Gender</label>
            <input type="text" class="form-control" asp-for="Gender" />
        </div>
        <div class="mt-3">
            <label class="form-label">Birthdate</label>
            <input type="date" class="form-control" asp-for="Birthdate" />
        </div>
        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" />
        </div>
        <div class="mt-3">
            <label class="form-label">Phone Number</label>
            <input type="tel" class="form-control" asp-for="PhoneNumber" />
        </div>
        <div class="mt-3">
            <label asp-for="Courses.Name" class="form-label">Course</label>
            <select asp-items="@ViewBag.Courses" class="form-select" asp-for="CoursesId">
                <option disabled selected>Select Course</option>
            </select>
        </div>
        <div class="mt-3">
            <label asp-for="Classes.Name" class="form-label">Class</label>
            <select asp-items="@ViewBag.Classes" class="form-select" asp-for="ClassesId">
                <option disabled selected>Select Class</option>
            </select>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-3"
                    asp-action="Delete"
                    asp-controller="Teachers">
                Delete
            </button>
        </div>
    </form>
}
